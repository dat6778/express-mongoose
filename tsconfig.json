{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}